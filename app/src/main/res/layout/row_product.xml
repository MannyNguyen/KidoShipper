<?xml version="1.0" encoding="utf-8"?>
<vn.kido.ship.IControl.ICardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:gravity="top"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivproduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:scaleType="fitCenter" />


            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">


                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/nameproduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/gray_900"
                        android:textSize="14sp"
                        app:fontName="BRYANTLG_BOLD" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <vn.kido.ship.IControl.ITextView
                            android:id="@+id/price_max_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/main"
                            android:textSize="14sp"
                            app:fontName="BRYANTLG_BOLD" />

                        <vn.kido.ship.IControl.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:text="/"
                            android:layout_weight="0.1"
                            android:textColor="@color/gray_900"
                            android:textSize="14dp"
                            app:fontName="BRYANTLG_BOLD" />

                        <vn.kido.ship.IControl.ITextView
                            android:id="@+id/unit"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit"
                            android:textColor="@color/gray_900"
                            android:textSize="14sp"
                            app:fontName="BRYANTLG_BOLD" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <vn.kido.ship.IControl.ITextView
                                android:id="@+id/priceproduct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:maxLines="1"
                                android:text="0"
                                android:textColor="@color/gray_700"
                                android:textSize="12dp"
                                app:fontName="BRYANTLG_BOLD" />

                            <vn.kido.ship.IControl.ITextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.1"
                                android:gravity="center"
                                android:text="/"
                                android:textColor="@color/gray_700"
                                android:textSize="14dp"
                                app:fontName="BRYANTLG_BOLD" />

                            <vn.kido.ship.IControl.ITextView
                                android:id="@+id/minunit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:maxLines="1"
                                android:text="0"
                                android:textColor="@color/gray_700"
                                android:textSize="12dp"
                                app:fontName="BRYANTLG_BOLD" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <!--<vn.nip.kidoshipper.IControl.ITextView
                                android:id="@+id/quantityproduct"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginRight="8dp"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:gravity="right"
                                android:maxLines="1"
                                android:paddingLeft="8dp"
                                android:text="0"
                                android:textColor="@color/main"
                                android:textSize="16sp"
                                app:fontName="BRYANTLG_BOLD" />-->

                        </LinearLayout>


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/lnold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <LinearLayout
                            android:id="@+id/lnone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_btn"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <vn.kido.ship.IControl.ITextView
                                android:id="@+id/unit1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textSize="12sp"
                                app:fontName="BRYANTLG_BOLD" />

                            <vn.kido.ship.IControl.ITextView
                                android:id="@+id/btn1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textSize="12sp"
                                app:fontName="BRYANTLG_BOLD" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lntwo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_btn"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <vn.kido.ship.IControl.ITextView
                                android:id="@+id/unit2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textSize="12sp"
                                app:fontName="BRYANTLG_BOLD" />

                            <vn.kido.ship.IControl.ITextView
                                android:id="@+id/btn2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textSize="12sp"
                                app:fontName="BRYANTLG_BOLD" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnthree"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_btn"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <vn.kido.ship.IControl.ITextView
                                android:id="@+id/unit3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textSize="12sp"
                                app:fontName="BRYANTLG_BOLD" />

                            <vn.kido.ship.IControl.ITextView
                                android:id="@+id/btn3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:textSize="12sp"
                                app:fontName="BRYANTLG_BOLD" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <vn.kido.ship.IControl.ITextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="8dp"
                android:text="@string/quantityorder"
                android:textColor="@color/gray_700"
                app:fontName="BRYANTLG_NORMAL" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_attribute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


                <LinearLayout
                    android:id="@+id/lnquantity0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <vn.kido.ship.IControl.ITextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textColor="@color/gray_900"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.ship.IControl.ITextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        app:fontName="BRYANTLG_NORMAL" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnquantity1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/quantity1old"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textColor="@color/gray_900"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/namequantityold1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        app:fontName="BRYANTLG_NORMAL" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnquantity2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/quantity2old"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textColor="@color/gray_900"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/namequantityold2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        app:fontName="BRYANTLG_NORMAL" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnquantity3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/quantity3old"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textColor="@color/gray_900"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/namequantityold3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        app:fontName="BRYANTLG_NORMAL" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrealreceived"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgrounduser"
            android:gravity="center"
            android:orientation="horizontal">

            <vn.kido.ship.IControl.ITextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.1"
                android:padding="8dp"
                android:text="@string/real_received"
                android:textColor="@color/gray_700"
                app:fontName="BRYANTLG_NORMAL" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rcv_attribute_real"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


                <LinearLayout
                    android:id="@+id/lnrequantity0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/red_attribute"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <vn.kido.ship.IControl.ITextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textColor="@color/gray_900"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.ship.IControl.ITextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        app:fontName="BRYANTLG_NORMAL" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrequantity1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/red_attribute"
                    android:orientation="horizontal">

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/quantity1new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textColor="@color/gray_900"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/namequantitynew1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        app:fontName="BRYANTLG_NORMAL" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrequantity2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/red_attribute">

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/quantity2new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textColor="@color/gray_900"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/namequantitynew2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        app:fontName="BRYANTLG_NORMAL" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrequantity3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/red_attribute"
                    android:orientation="horizontal">

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/quantity3new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:textColor="@color/gray_900"
                        app:fontName="BRYANTLG_BOLD" />

                    <vn.kido.ship.IControl.ITextView
                        android:id="@+id/namequantitynew3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        app:fontName="BRYANTLG_NORMAL" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <vn.kido.ship.IControl.ITextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/total_money_order"
                android:textColor="@color/gray_700"
                app:fontName="BRYANTLG_NORMAL" />

            <vn.kido.ship.IControl.ITextView
                android:id="@+id/quantityproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="8dp"
                android:text="0"
                android:textColor="@color/main"
                android:textSize="14sp"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lntotal_real"
            android:orientation="horizontal">

            <vn.kido.ship.IControl.ITextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/total_real"
                android:textColor="@color/gray_900"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.ship.IControl.ITextView
                android:id="@+id/quantityproduct_real"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="8dp"
                android:text="0"
                android:textColor="@color/main"
                android:textSize="14sp"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lndiscount"
            android:orientation="horizontal">

            <vn.kido.ship.IControl.ITextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:padding="8dp"
                android:text="@string/discount"
                android:textColor="@color/gray_700"
                app:fontName="BRYANTLG_NORMAL" />
            <vn.kido.ship.IControl.ITextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:id="@+id/percent"
                android:padding="8dp"
                android:text=""
                android:gravity="center"
                android:textColor="@color/gray_700"
                app:fontName="BRYANTLG_NORMAL" />

            <vn.kido.ship.IControl.ITextView
                android:id="@+id/discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="8dp"
                android:text="0"
                android:textColor="@color/main"
                android:textSize="14sp"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>

        <!--ngoaÌ€i linear-->

    </LinearLayout>


</vn.kido.ship.IControl.ICardView>
