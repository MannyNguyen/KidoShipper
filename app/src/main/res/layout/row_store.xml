<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    android:foreground="?android:selectableItemBackground"
    app:cardBackgroundColor="@color/white"

    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <vn.kido.ship.IControl.ITextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ID Cửa Hàng: "
                android:textColor="@color/gray_600"
                android:textSize="13sp"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.ship.IControl.ITextView
                android:id="@+id/idshop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/main"
                android:textSize="16sp"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <vn.kido.ship.IControl.ITextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tên Cửa Hàng: "
                android:textColor="@color/gray_600"
                android:textSize="13sp"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.ship.IControl.ITextView
                android:id="@+id/nameshop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/gray_600"
                android:textSize="14sp"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <vn.kido.ship.IControl.ITextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Địa chỉ: "
                android:textColor="@color/gray_600"
                android:textSize="13sp"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.ship.IControl.ITextView
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:text=""
                android:lines="2"
                android:textColor="@color/gray_600"
                android:textSize="16sp"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_200" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <vn.kido.ship.IControl.ITextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Số điện thoại: "
                android:textColor="@color/gray_600"
                android:textSize="12sp"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.ship.IControl.ITextView
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/gray_600"
                android:textSize="12sp"
                app:fontName="BRYANTLG_BOLD" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>