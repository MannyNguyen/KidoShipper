<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Config.ConfigFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="24dp"
            android:background="@drawable/red_border_box_normal"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="12dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <vn.kido.ship.IControl.ITextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CONFIG DEV TEST"
                    android:textColor="@color/main"
                    android:textSize="20sp"
                    app:fontName="BRYANTLG_BOLD" />

            </FrameLayout>

            <vn.kido.ship.IControl.IButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="dev"
                android:id="@+id/btndev"
                android:textColor="@color/gray_900"
                android:textSize="14sp"
                app:fontName="BRYANTLG_BOLD" />

            <vn.kido.ship.IControl.IButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="test"
                android:id="@+id/btntest"
                android:textColor="@color/gray_900"
                android:textSize="14sp"
                app:fontName="BRYANTLG_BOLD" />


        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/progress" />

</FrameLayout>