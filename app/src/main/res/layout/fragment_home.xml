<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical"
    tools:context=".Fragment.Common.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4">

                    <LinearLayout
                        android:id="@+id/menu_profile_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#e71b23"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="4dp"
                            android:scaleType="centerCrop" />

                        <vn.kido.ship.IControl.ITextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            app:fontName="BRYANTLG_BOLD" />

                        <vn.kido.ship.IControl.ITextView
                            android:id="@+id/txt_customer_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:padding="6dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/home_profile_bg" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ln_order"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/red_border_box_r4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/ic_folow" />

                            <vn.kido.ship.IControl.ITextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:gravity="center_horizontal"
                                android:text="@string/bring_product"
                                android:textAllCaps="true"
                                android:textColor="@color/gray_900"
                                android:textSize="20sp"
                                app:fontName="BRYANTLG_BOLD" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ln_history"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/red_border_box_r4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/ic_history" />

                            <vn.kido.ship.IControl.ITextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:gravity="center_horizontal"
                                android:text="@string/history"
                                android:textAllCaps="true"
                                android:textColor="@color/gray_900"
                                android:textSize="20sp"
                                app:fontName="BRYANTLG_BOLD" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ln_store"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/red_border_box_r4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/ic_shop" />

                            <vn.kido.ship.IControl.ITextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="7"
                                android:gravity="center_horizontal"
                                android:text="@string/shop"
                                android:textAllCaps="true"
                                android:textColor="@color/gray_900"
                                android:textSize="20sp"
                                app:fontName="BRYANTLG_BOLD" />

                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>


            </LinearLayout>

        </FrameLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <vn.kido.ship.IControl.ITextView
            android:id="@+id/txt_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:textColor="@color/gray_500"
            android:textSize="14sp"
            android:visibility="gone"
            app:fontName="BRYANTLG_NORMAL" />

        <vn.kido.ship.IControl.ITextView
            android:id="@+id/txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="version 1.1.3"
            android:textColor="@color/gray_500"
            android:textSize="14sp"
            app:fontName="BRYANTLG_NORMAL" />

    </LinearLayout>


</LinearLayout>