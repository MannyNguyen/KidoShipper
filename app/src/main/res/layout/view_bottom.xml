<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/drop_down_up"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_open_up"
        android:scaleType="centerInside" />

    <vn.kido.ship.IControl.ICardView
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="-4dp"
        android:visibility="visible"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ic_detail_order"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <include layout="@layout/marker_active" />

                <vn.kido.ship.IControl.ITextView
                    android:id="@+id/txv_address_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="@string/address"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_900"
                    app:fontName="BRYANTLG_BOLD" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@color/gray_500"></View>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:src="@drawable/ic_info" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_400" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4">

                    <vn.kido.ship.IControl.ITextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="@string/shop"
                        android:textColor="@color/gray_700"
                        android:textSize="14sp"
                        app:fontName="BRYANTLG_BOLD" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <vn.kido.ship.IControl.ITextView
                            android:id="@+id/txv_nameshop_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/gray_900"
                            android:textSize="14sp"
                            app:fontName="BRYANTLG_BOLD" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/call_user"
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:src="@drawable/call" />


                            <ImageView
                                android:id="@+id/sms_user"
                                android:layout_width="24dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/message" />
                        </LinearLayout>

                    </LinearLayout>


                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/border_edittext"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ln_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4">

                        <vn.kido.ship.IControl.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="@string/notice"
                            android:textColor="@color/gray_700"
                            android:textSize="14sp"
                            app:fontName="BRYANTLG_BOLD" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="7">

                        <vn.kido.ship.IControl.ITextView
                            android:id="@+id/txv_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="@string/notice"
                            android:textColor="@color/gray_900"
                            android:textSize="14sp"
                            app:fontName="BRYANTLG_BOLD" />

                    </FrameLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ln_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4">

                        <vn.kido.ship.IControl.ITextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:text="@string/reason"
                            android:textColor="@color/gray_700"
                            android:textSize="14sp"
                            app:fontName="BRYANTLG_BOLD" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="7">

                        <vn.kido.ship.IControl.ITextView
                            android:id="@+id/txv_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="4dp"
                            android:text="@string/reason"
                            android:textColor="@color/gray_900"
                            android:textSize="14sp"
                            app:fontName="BRYANTLG_BOLD" />

                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/delivery_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ln_two_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <vn.kido.ship.IControl.IButton
                            android:id="@+id/btn_exchange"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/red_border_box"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            android:text="@string/change_order"
                            android:textColor="@color/main"
                            android:textSize="14sp"
                            app:fontName="BRYANTLG_BOLD" />

                        <vn.kido.ship.IControl.IButton
                            android:id="@+id/btn_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/red_border_box"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            android:text="@string/cancle_order"
                            android:textColor="@color/main"
                            android:textSize="14sp"
                            app:fontName="BRYANTLG_BOLD" />


                    </LinearLayout>

                    <vn.kido.ship.IControl.IButton
                        android:id="@+id/btnfinish"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/background_program"
                        android:paddingLeft="40dp"
                        android:paddingRight="40dp"
                        android:text="@string/finished"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:fontName="BRYANTLG_BOLD" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ln_finish_new_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <vn.kido.ship.IControl.IButton
                            android:id="@+id/btn_change_dever"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/red_border_box"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            android:text="@string/change_order"
                            android:textColor="@color/main"
                            android:textSize="14sp"
                            app:fontName="BRYANTLG_BOLD" />

                        <vn.kido.ship.IControl.IButton
                            android:id="@+id/start"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/background_program"
                            android:paddingLeft="40dp"
                            android:paddingRight="40dp"
                            android:text="@string/start"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:fontName="BRYANTLG_BOLD" />

                    </LinearLayout>


                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </vn.kido.ship.IControl.ICardView>


</LinearLayout>