<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:foreground="?android:selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:foreground="@color/background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/backgroundtypeorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_type_order_gray"
            android:orientation="horizontal"
            android:padding="8dp">

            <vn.kido.ship.IControl.ITextView
                android:id="@+id/typeorder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Loại đơn"
                android:textAllCaps="true"
                android:textColor="@color/gray_900"
                android:textSize="13sp"
                app:fontName="BRYANTLG_BOLD" />

            <ImageView
                android:id="@+id/map"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:src="@drawable/marker"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_item_order"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <vn.kido.ship.IControl.ITextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/code_order"
                    android:textColor="@color/gray_600"
                    android:textSize="13sp"
                    app:fontName="BRYANTLG_BOLD" />

                <vn.kido.ship.IControl.ITextView
                    android:id="@+id/order_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:textColor="@color/main"
                    android:textSize="16sp"
                    app:fontName="BRYANTLG_BOLD" />

                <vn.kido.ship.IControl.ITextView
                    android:id="@+id/create_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    app:fontName="BRYANTLG_BOLD" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <vn.kido.ship.IControl.ITextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/quantity"
                    android:textColor="@color/gray_600"
                    android:textSize="13sp"
                    app:fontName="BRYANTLG_BOLD" />

                <vn.kido.ship.IControl.ITextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text=""
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"

                    app:fontName="BRYANTLG_NORMAL" />

                <vn.kido.ship.IControl.ITextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="@string/product"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    app:fontName="BRYANTLG_BOLD" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <vn.kido.ship.IControl.ITextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    app:fontName="BRYANTLG_BOLD" />

                <vn.kido.ship.IControl.ITextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text=""
                    android:textColor="@color/main"
                    android:textSize="14sp"
                    app:fontName="BRYANTLG_BOLD" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <vn.kido.ship.IControl.ITextView
                    android:id="@+id/txv_text_date"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_date"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    app:fontName="BRYANTLG_BOLD" />

                <vn.kido.ship.IControl.ITextView
                    android:id="@+id/delivery_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    app:fontName="BRYANTLG_BOLD" />

                <vn.kido.ship.IControl.ITextView
                    android:id="@+id/suggest_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    app:fontName="BRYANTLG_BOLD" />

                <vn.kido.ship.IControl.ITextView
                    android:id="@+id/detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_detail"
                    android:textColor="@color/gray_600"
                    android:textSize="12sp"
                    app:fontName="BRYANTLG_BOLD" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>